<project xmlns="http://maven.apache.org/POM/4.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.github.djelinek</groupId>
	<artifactId>generator-camel-project-tests</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<licenses>
		<license>
			<name>The Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Dominik Jelinek</name>
			<email>djelinekk@redhat.com</email>
			<organization>Red Hat</organization>
			<organizationUrl>http://www.redhat.com/</organizationUrl>
		</developer>
	</developers>

	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<test>CamelProjectTests</test>
	</properties>

	<build>
		<plugins>

			<!-- Clone generator-camel-project GitHub repository -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<version>1.11.1</version>
				<executions>
					<execution>
						<id>checkout-generator-camel-project</id>
						<phase>initialize</phase>
						<goals>
							<goal>checkout</goal>
						</goals>
						<configuration>
							<connectionUrl>scm:git:https://github.com/djelinek/generator-camel-project</connectionUrl>
							<developerConnection>scm:git:https://github.com/djelinek/generator-camel-project</developerConnection>
							<!-- <connectionUrl>scm:git:https://github.com/camel-tooling/generator-camel-project</connectionUrl>
							<developerConnection>scm:git:https://github.com/camel-tooling/generator-camel-project</developerConnection> -->
							<workingDirectory>target/generator-camel-project</workingDirectory>
							<checkoutDirectory>target/generator-camel-project</checkoutDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.6.0</version>
				<executions>
					<execution>
						<id>npm-link-generator</id>
						<goals>
							<goal>exec</goal>
						</goals>
						<phase>initialize</phase>
						<configuration>
							<workingDirectory>target/generator-camel-project</workingDirectory>
							<executable>npm</executable>
							<arguments>
								<argument>link</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Run tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.22.1</version>
				<configuration>
					<test>${test}</test>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.surefire</groupId>
						<artifactId>surefire-junit47</artifactId>
						<version>2.22.1</version>
					</dependency>
				</dependencies>
			</plugin>

		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-java</artifactId>
			<version>2.3.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-junit</artifactId>
			<version>2.3.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

</project>
